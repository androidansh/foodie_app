<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Food_Order_App" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:colorPrimary">@color/bgColor</item>
        <item name="colorAccent">@color/primary_color</item>
        <item name="android:windowBackground">@color/bgColor</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:colorAccent">@color/headingColor1</item>
        <item name="colorOnSurface">@color/textColor</item>
        <item name="android:colorPrimaryDark">@color/btn_click_color</item>
        <item name="android:statusBarColor">@color/primary_color</item>
        <item name="colorBackgroundFloating">@color/bgColor</item>
        <item name="android:windowLightStatusBar">true</item>

        <!--this customizes the hint font of the EditText-->
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1</item>

        <!--this changes the helper text font-->
        <item name="textAppearanceCaption">@style/TextAppearance.App.Caption</item>
    </style>

    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <!--this changes the font face of the hint text-->
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <!--this changes the font face of the helper text-->
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Theme.Food_Order_App" parent="Base.Theme.Food_Order_App" />

    <style name="et" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/headingColor1</item>
    </style>

    <style name="NavigationTab" parent="Widget.Design.BottomNavigationView">
        <item name="tabSelectedTextColor">@color/textColor</item>
        <item name="android:navigationIcon">@color/primary_color</item>
        <item name="tabIndicatorColor">@color/primary_color</item>
        <item name="tabSelectedTextAppearance">@style/NavigationTabTextAppearance</item>
    </style>




    <style name="NavigationTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:background">@color/bgColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dialog_style" parent = "Theme.AppCompat.Dialog">
        
<!--        <item name="android:windowMinWidthMajor">80%</item>-->
<!--        <item name="android:windowMinWidthMinor">80%</item>-->
        
    </style>
    
    <style name="checkBox" parent="Theme.Material3.DayNight">
        <item name="colorAccent">@color/primary_color</item>
<!--        <item name="colorPrimary">@color/primary_color</item>-->
        <item name="colorPrimaryDark">@color/btn_click_color</item>
        <item name="colorSecondary">@color/primary_color</item>
        <item name="android:textColorSecondary">@color/textColor</item>
    </style>

</resources>