<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Food_Order_App" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:colorPrimary">@color/bgColor</item>
        <item name="android:windowBackground">@color/bgColor</item>
        <item name="android:colorAccent">@color/headingColor</item>
        <item name="android:colorPrimaryDark">@color/headingColor</item>
        <item name="android:statusBarColor">@color/primary_color</item>
        <item name="colorBackgroundFloating">@color/bgColor</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Food_Order_App" parent="Base.Theme.Food_Order_App" />

    <style name="NavigationTab" parent="Widget.Design.BottomNavigationView">
        <item name="tabSelectedTextColor">@color/textColor</item>
        <item name="android:navigationIcon">@color/primary_color</item>
        <item name="tabIndicatorColor">@color/primary_color</item>
        <item name="tabSelectedTextAppearance">@style/NavigationTabTextAppearance</item>
    </style>


    <style name="NavigationTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:background">@color/bgColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="checkBox" parent="Theme.AppCompat.DayNight">
        <item name="colorAccent">@color/primary_color</item>
        <item name="android:textColorSecondary">@color/primary_color</item>
    </style>
</resources>